html
  head
    link(rel='stylesheet', href='stylesheets/index.css')
    link(rel='stylesheet', href='stylesheets/buttons.css')
    link(rel='stylesheet', href='stylesheets/context_menu.css')
    link(rel='stylesheet', href='stylesheets/fa/css/all.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Bad+Script&display=swap')
    link(rel='stylesheet', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    script.
      if (typeof module === 'object') { window.module = module; module = undefined;}
    script.
      if(window.module) module = window.module;
    script(src='https://code.jquery.com/jquery-3.4.1.min.js', integrity='sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=', crossorigin='anonymous')
    script(src='script/index.js')
    script(src='script/ui/jquery/jquery.js')
    script(src='script/ui/jquery-ui.min.js')
    script(src='script/noty/packaged/jquery.noty.packaged.min.js')
    script(src='script/noty/themes/cryogen.js?rand=5999', type='text/javascript')
    script(src='//cdn.jsdelivr.net/npm/jquery.scrollto@2.1.2/jquery.scrollTo.min.js')
    block head
  body
    div#wrapper
      div#title-bar
        img#title-img(src='images/icon.png')
        div#title= title != null ? title : ''
        div.buttons
          div#minimize-button
          div#maximize-button
          div#exit-button
      div#main-content
        block main_content
      div#context-menu
        div#context-list
