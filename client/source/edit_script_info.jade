div.noty_message
    span.noty_text
    div.widget.register(style='margin-top: 5px')
        div.report_line
            label Script Name
            input#name(type='text', value=script.getName(), maxlength)
        div(style='clear: both;')
        div.report_line
            label Arguments
            input#arguments(type='text', value=script.getJoinedArguments(), maxlength)
        div(style='clear: both;')
        div.report_line
            label Variable Names
            input#variables(type='text', value=script.getJoinedVariableNames(), maxlength)
        div(style='clear: both;')
        div.report_line
            label Return Type
            input#return-type(type='text', value=script.getReturnType().toString(), maxlength)
        div(style='clear: both;')
div.noty_close